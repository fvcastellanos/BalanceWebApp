@using Microsoft.AspNetCore.Mvc.Rendering
@model BalanceWebApp.Model.Views.TransactionTypes.NewViewModel

@{
    ViewData["Title"] = "New Transaction Type";
}

<div class="row">
    <div class="col-md-12">
        <h3>@ViewData["Title"]</h3>

        @if (Model.Message != null)
        {
            <div class="alert alert-danger content-separator">
                @Model.Message
            </div>
        }

        <form method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="name">Name</label>
                @Html.TextBoxFor(model => model.Name, new {@class = "form-control", @placeholder = "Name", @name = "name"})
                @Html.ValidationMessageFor(model => model.Name, string.Empty, new {@class = "text-danger"})
            </div>

            <div class="form-group">
                <label for="type">Type</label>
                @Html.DropDownListFor(model => model.Type, new SelectList(Model.Options, "Value", "Text"), new { @class = "form-control", @name="type" })
                @Html.ValidationMessageFor(model => model.Type, string.Empty, new {@class = "text-danger"})
            </div>
        
            <input type="submit" class="btn btn-primary" value="Add" />
            @Html.ActionLink("Back", "Index", "TransactionType", null, new { @class = "btn" })
        </form>

    </div>
</div>    
